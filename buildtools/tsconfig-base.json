{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "..",
    "rootDir": "..",
    "outDir": "../_build",
    "paths": {
      "*": [
        "*",
        "grist-core/*",
      ],
    },
    "composite": true,
    "plugins": [{
      "name": "typescript-tslint-plugin"
    }],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react"
  }
}
